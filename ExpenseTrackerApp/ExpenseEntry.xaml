<Window x:Class="ExpenseTrackerApp.ExpenseEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpenseTrackerApp"
        mc:Ignorable="d"
        Title="ExpenseEntry" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition>
            </RowDefinition>

     
          
        </Grid.RowDefinitions>

        <Border CornerRadius="10" Grid.RowSpan="5">
            <Border.Background>
                <LinearGradientBrush>
                    <GradientStop Color="Navy" Offset="0.0"></GradientStop>
                    <GradientStop Color="DarkRed" Offset="1"></GradientStop>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <ScrollViewer>
        
        <StackPanel Margin="10">

                <Menu VerticalAlignment="Top" Background="LightGray">
                    <MenuItem Header="_File">
                        <MenuItem Header="_New Expense" Click="NewExpense_Click"/>
                        <MenuItem Header="_Exit" Click="Exit_Click"/>
                    </MenuItem>
                    <MenuItem Header="_View">
                        <MenuItem Header="_Expense List" Click="ExpenseList_Click"/>
                    </MenuItem>
                    <MenuItem Header="_Help">
                        <MenuItem Header="_About" Click="About_Click"/>
                    </MenuItem>
                </Menu>

      
                <StackPanel Orientation="Vertical">

                    <Label Content="Amount " Foreground="White" 
                           HorizontalAlignment="Center"
                            Background="Transparent"
                            HorizontalContentAlignment="Left"
                            Width="250"
                             FontFamily="helvetica"   
                          />

                    <TextBox FontFamily="Helvetica"
                         FontWeight="Light"
                             Name="AmountTextBox"
                         Foreground="Wheat"
                         FontSize="20"
                         HorizontalAlignment="Center"
                         Background="Transparent"
                         HorizontalContentAlignment="Left"
                         Width="250"
                         Height="30"/>

                </StackPanel>

                <StackPanel Orientation="Vertical">

                    <Label Content="Description" Foreground="White" 
           HorizontalAlignment="Center"
            Background="Transparent"
            HorizontalContentAlignment="Left"
            Width="250"
             FontFamily="helvetica"   
          />

                    <TextBox FontFamily="Helvetica"
         FontWeight="Light"
             Name="DescriptionTextBox"
         Foreground="Wheat"
         FontSize="20"
         HorizontalAlignment="Center"
         Background="Transparent"
         HorizontalContentAlignment="Left"
         Width="250"
         Height="30"/>

                </StackPanel>

                <StackPanel Orientation="Vertical">

                    <Label Content="Date" Foreground="White" 
  HorizontalAlignment="Center"
   Background="Transparent"
   HorizontalContentAlignment="Left"
   Width="250"
    FontFamily="helvetica"   
 />

                    <DatePicker x:Name="DatePicker"
                                 HorizontalAlignment="Center"
  Background="Transparent"
  HorizontalContentAlignment="Left"
  Width="250"
   FontFamily="helvetica" 
                                Margin="10"/>

                </StackPanel>

                <StackPanel Orientation="Vertical">

                    <Label Content="Payer Name" Foreground="White" 
 HorizontalAlignment="Center"
  Background="Transparent"
  HorizontalContentAlignment="Left"
  Width="250"
   FontFamily="helvetica"   
/>


                <TextBox FontFamily="Helvetica"
FontWeight="Light"
    Name="PayerTextBox"
Foreground="Wheat"
FontSize="20"
HorizontalAlignment="Center"
 Background="Transparent"
HorizontalContentAlignment="Left"
Width="250"
Height="30"/>

            </StackPanel>


                <StackPanel Orientation="Vertical">

                    <Label Content="Participants" Foreground="White" 
 HorizontalAlignment="Center"
  Background="Transparent"
  HorizontalContentAlignment="Left"
  Width="250"
   FontFamily="helvetica"   
/>


                <TextBox FontFamily="Helvetica"
FontWeight="Light"
    Name="ParticipantsTextBox"
Foreground="Wheat"
FontSize="20"
HorizontalAlignment="Center"
 Background="Transparent"
HorizontalContentAlignment="Left"
Width="250"
Height="30"/>
            </StackPanel>

 
            <Button Content="Add Expense"
                    Foreground="Wheat"
FontSize="20"
HorizontalAlignment="Center"
 Background="Transparent"
HorizontalContentAlignment="Left"
Width="250"
Height="30"
                    Click="AddExpenseButton_Click" Margin="10"/>
            
            <TextBlock x:Name="MessageTextBlock"
                       
                       Foreground="Wheat"
FontSize="20"
HorizontalAlignment="Center"
 Background="Transparent"

Width="250"
Height="30"
                        Margin="10"/>
            
            <ListBox x:Name="ExpenseListBox"
                     
                     Margin="10" Height="200"/>
        </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
