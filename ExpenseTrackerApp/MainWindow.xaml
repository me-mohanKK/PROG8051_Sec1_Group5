<Window x:Class="ExpenseTrackerApp.LofiWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpenseTrackerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="400"
        AllowsTransparency="True" Background="Transparent"
        WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition>                    
                </RowDefinition>
                <RowDefinition>
                </RowDefinition>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="Navy" Offset="0.0"></GradientStop>
                        <GradientStop Color="DarkRed" Offset="1"></GradientStop>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>
            
                <StackPanel>
                <Image Source="Images/budget.png" Width="70" Height="80"></Image>
                <TextBlock Text="Expense Tracker"
                           FontSize="30"
                           FontWeight="SemiBold"
                           FontFamily="helvetica"
                           Foreground="Wheat"
                           HorizontalAlignment="Center"
                           Height="80"></TextBlock>
                </StackPanel>
            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Vertical">
                    <TextBox FontFamily="Helvetica"
                         FontWeight="Light"
                             Text="Username"
                         Foreground="Wheat"
                         FontSize="20"
                         HorizontalAlignment="Center"
                         Background="Transparent"
                         HorizontalContentAlignment="Left"
                         Width="250"
                         Height="30"/>

                </StackPanel>


                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">
                <PasswordBox FontFamily="Helvetica"
              FontWeight="Light"
              Password="Password"
              Foreground="Wheat"
              FontSize="20"
              HorizontalAlignment="Center"
              Background="Transparent"
              HorizontalContentAlignment="Left"
              Width="250"
              Height="30"></PasswordBox>
              
            </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                    <Button Width="100" Height="40" Content="LOGIN" Margin="60,0,60,0" FontFamily="Helvetica" Background="White"/>
                    <Button Width="100" Height="40" Content="REGISTER" FontFamily="Helvetica" Background="IndianRed"/>
                </StackPanel>
            </StackPanel>




        </Grid>
    </Grid>
</Window>
